<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="canchas.com.proin2.canchas.RegistrarPeloteroActivity">

    <TextView
        android:id="@+id/lbl1"
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtNombre"
        android:layout_below="@id/lbl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lbl2"
        android:text="Apellidos"
        android:layout_below="@id/txtNombre"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtApellidos"
        android:layout_below="@id/lbl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/lbl3"
        android:text="Celular"
        android:layout_below="@id/txtApellidos"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtCelular"
        android:layout_below="@id/lbl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lbl4"
        android:text="Email"
        android:layout_below="@id/txtCelular"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtEmail"
        android:layout_below="@id/lbl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/lbl5"
        android:text="Usuario"
        android:layout_below="@id/txtEmail"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtUsuario"
        android:layout_below="@id/lbl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/lbl6"
        android:text="ContraseÃ±a"
        android:layout_below="@id/txtUsuario"
        android:layout_width="wrap_content"
        android:textColor="@color/application"
        android:textSize="20dp"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txtContrasenia"
        android:layout_below="@id/lbl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtContrasenia"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:padding="10dp"
        android:onClick="viewRegistrar"
        android:text="Registrar"/>


</RelativeLayout>
