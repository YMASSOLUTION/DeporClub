@*-----------Generado :D--------------*@
@model Entidad.Empresa
@{
    ViewBag.Title = "Detalle Empresa";
    Layout = "~/Views/Shared/_MasterIntranet.cshtml";
}
<!-- Cabecera -->
<div class="row">
    <div class="col-lg-12">
        <!-- Breadcrumbs -->
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Intranet/Index")">Inicio</a></li>
                <li class="active"><a href="@Url.Content("~/Empresa/Index")">Empresas</a></li>
            </ul>
        </div>
        <div class="page-header title">
            <h1>Empresas <span class="sub-title">Detalle Empresa</span></h1>
        </div>
        <!-- Breadcrumbs -->
    </div>
</div>
<!-- Cabecera -->
<!-- Aqui empieza el codigo del content -->
<div class="portlet">
    <div class="portlet-heading dark">
        <div class="portlet-title">
            <h4>Detalle de Empresa</h4>
        </div>
        <div class="portlet-widgets">
            <a data-toggle="collapse" data-parent="#accordion" href="#acordion1"><i class="fa fa-chevron-down"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div id="acordion1" class="panel-collapse collapse in">
        <div class="portlet-body">
            <div class="display-label">
                <label for="nombre">Nombre</label>                
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.nombre)
            </div>
            <div class="display-label">
                <label for="nombre">Usuario</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Usuario.nick)
            </div>
            <div class="display-label">
                <label for="nombre">Direccion</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.direccion)
            </div>           
            <div class="display-label">
                <label for="nombre">Telefono</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.telefono)
            </div>
            <div class="display-label">
                <label for="nombre">Celular</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.celular)
            </div>
            <div class="display-label">
                <label for="nombre">Número de Canchas</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.numeroCanchas)
            </div>
            <div class="display-label">
                <label for="nombre">Tiene Uniformes?</label> 
            </div>
            <div class="editor-field">
                @if (Model.uniformes)
                {
                    <label class="label label-active label-lg arrowed arrowed-right">Si</label>
                }
                else
                {
                    <label class="label label-terminated label-lg arrowed arrowed-right">No</label>
                }
            </div>
            <div class="display-label">
                <label for="nombre">Tiene Balon?</label> 
            </div>
            <div class="editor-field">
                @if (Model.balon)
                {
                    <label class="label label-active label-lg arrowed arrowed-right">Si</label>
                }
                else
                {
                    <label class="label label-terminated label-lg arrowed arrowed-right">No</label>
                }
            </div>
            <div class="display-label">
                <label for="nombre">Activo</label> 
            </div>
            <div class="editor-field">
                @if (Model.activo)
                {
                    <label class="label label-active label-lg arrowed arrowed-right">Si</label>
                }
                else
                {
                    <label class="label label-terminated label-lg arrowed arrowed-right">No</label>
                }
            </div>
            <div class="display-label">
                <label for="nombre">Distrito</label> 
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Distrito.nombre)
            </div>
            <div class="form-actions">
                @using (Html.BeginForm("Edit", "Empresa", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.id)
                    <input type="submit" class="btn btn-primary" value="Editar" />
                    @Html.ActionLink("Regresar a la Lista", "Index")
                }
            </div>
        </div>
    </div>
</div>
