@*-----------Generado :D--------------*@
@model Entidad.Campo
@{
    ViewBag.Title = "Crear Campo";
    Layout = "~/Views/Shared/_MasterIntranet.cshtml";
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryvalidate")
}
<!-- Cabecera -->
<div class="row">
    <div class="col-lg-12">
        <!-- Breadcrumbs -->
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Intranet/Index")">Inicio</a></li>
                <li class="active"><a href="@Url.Content("~/Campo/Index")">Campos</a></li>
            </ul>
        </div>
        <div class="page-header title">
            <h1>Campos <span class="sub-title">Crear Campo</span></h1>
        </div>
        <!-- Breadcrumbs -->
    </div>
</div>
<!-- Cabecera -->
<!-- Aqui empieza el codigo del content -->
<div class="col-md-12">
    <div class="portlet">
        <!-- Cabecera Tabla -->
        <div class="portlet-heading dark">
            <div class="portlet-title">
                <h4>Crear Campo</h4>
            </div>
            <div class="portlet-widgets">
                <a data-toggle="collapse" data-parent="#accordion" href="#acordion1"><i class="fa fa-chevron-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- Cabecera Tabla -->
        <!-- Cuerpo Tabla -->
        <div id="acordion1" class="panel-collapse collapse in">
            @using (Html.BeginForm("Create", "Campo", FormMethod.Post))
            {
                <div class="portlet-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div id="CentroDeportivoList"></div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre)
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @placeholder = "Ingrese el nombre", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.largo)
                        @Html.TextBoxFor(m => m.largo, new { @class = "form-control", @placeholder = "Ingrese su largo", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.largo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ancho)
                        @Html.TextBoxFor(m => m.ancho, new { @class = "form-control", @placeholder = "Ingrese su ancho", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.ancho)
                    </div>                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.precio)
                        @Html.TextBoxFor(m => m.precio, new { @class = "form-control", @placeholder = "Ingrese su precio", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.precio)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tipoCampo)
                        <select name="tipoCampo" id="tipoCampo" class="form-control">
                            <option value="Sintetico">Sintetico</option>
                            <option value="Gras">Gras</option>
                        </select>
                    </div>
                    <div class="form-group">
                       @Html.LabelFor(model => model.activo)
                    @Html.EditorFor(m => m.activo, new { @class = "form-control", @placeholder = "Ingrese su activo", @maxlength = "" })
                    @Html.ValidationMessageFor(model => model.activo)
                    </div>
                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Guardar" />
                        @Html.ActionLink("Regresar a la Lista de Campos", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>

<script>
    $(document).ready(function () {
        $.isLoading({ text: "Cargando Formato" });
        $("#CentroDeportivoList").load('/Intranet/SelectCentroDeportivobyEmpresa?idEmpresa=@ViewBag.idEmpresa');
        $.isLoading("hide");

    });
</script>
