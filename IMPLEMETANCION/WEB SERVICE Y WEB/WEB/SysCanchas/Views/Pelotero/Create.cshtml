@*-----------Generado :D--------------*@
@model Entidad.Pelotero
@{
    ViewBag.Title = "Crear Pelotero";
    Layout = "~/Views/Shared/_MasterIntranet.cshtml";
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryvalidate")
}
<!-- Cabecera -->
<div class="row">
    <div class="col-lg-12">
        <!-- Breadcrumbs -->
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Intranet/Index")">Inicio</a></li>
                <li class="active"><a href="@Url.Content("~/Pelotero/Index")">Peloteros</a></li>
            </ul>
        </div>
        <div class="page-header title">
            <h1>Peloteros <span class="sub-title">Crear Pelotero</span></h1>
        </div>
        <!-- Breadcrumbs -->
    </div>
</div>
<!-- Cabecera -->
<!-- Aqui empieza el codigo del content -->
<div class="col-md-12">
    <div class="portlet">
        <!-- Cabecera Tabla -->
        <div class="portlet-heading dark">
            <div class="portlet-title">
                <h4>Crear Pelotero</h4>
            </div>
            <div class="portlet-widgets">
                <a data-toggle="collapse" data-parent="#accordion" href="#acordion1"><i class="fa fa-chevron-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- Cabecera Tabla -->
        <!-- Cuerpo Tabla -->
        <div id="acordion1" class="panel-collapse collapse in">
            @using (Html.BeginForm("Create", "Pelotero", FormMethod.Post))
            {
                <div class="portlet-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre)
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @placeholder = "Ingrese su nombre", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.apellidos)
                        @Html.TextBoxFor(m => m.apellidos, new { @class = "form-control", @placeholder = "Ingrese su apellidos", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.apellidos)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.idUsuario)
                        @Html.TextBoxFor(m => m.idUsuario, new { @class = "form-control", @placeholder = "Ingrese su idUsuario", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.idUsuario)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.celular)
                        @Html.TextBoxFor(m => m.celular, new { @class = "form-control", @placeholder = "Ingrese su celular", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.celular)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.email)
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Ingrese su email", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.activo)
                        @Html.TextBoxFor(m => m.activo, new { @class = "form-control", @placeholder = "Ingrese su activo", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.activo)
                    </div>
                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Guardar" />
                        @Html.ActionLink("Regresar a la Lista de Peloteros", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
