@model IEnumerable<Entidad.Departamento>
<label class="control-label">Seleccione el Departamento</label>
<select class="form-control" name="cboDepartamento" id="cboDepartamento">
    <option value="-1" selected>--Seleccione un Departamento--</option>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.nombre)</option>
        }
    }
    else
    {
        <option value="0">No hay Departamento Disponibles</option>
    }
</select>




