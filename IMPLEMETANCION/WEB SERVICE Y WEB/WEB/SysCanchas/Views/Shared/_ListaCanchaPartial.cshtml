@model IEnumerable<Entidad.Cancha>
<label class="control-label">Seleccione la Cancha</label>
<select class="form-control" name="cboCancha" id="cboCancha">
    <option value="-1" selected>--Seleccione una Cancha--</option>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.nombre)</option>
        }
    }
    else
    {
        <option value="0">No hay Canchas Disponibles</option>
    }
</select>
