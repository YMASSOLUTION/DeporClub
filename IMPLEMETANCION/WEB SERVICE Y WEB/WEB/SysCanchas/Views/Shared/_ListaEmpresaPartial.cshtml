@model IEnumerable<Entidad.Empresa>
<label class="control-label">Seleccione una Empresa</label>
<select class="form-control" name="cboEmpresa" id="cboEmpresa">
    <option value="-1" selected>--Seleccione una Empresa--</option>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.nombre)</option>
        }
    }
    else
    {
        <option value="0">No hay Empresas Disponibles</option>
    }
</select>
