@model IEnumerable<Entidad.Distrito>
<label class="control-label">Seleccione el Distrito</label>
<select class="form-control" name="cboDistrito" id="cboDistrito">
    <option value="-1" selected>--Seleccione un Distrito--</option>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.nombre)</option>
        }
    }
    else
    {
        <option value="0">No hay Distrito Disponibles</option>
    }
</select>





