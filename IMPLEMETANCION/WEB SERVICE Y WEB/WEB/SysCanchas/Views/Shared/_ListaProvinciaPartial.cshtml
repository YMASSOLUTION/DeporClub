@model IEnumerable<Entidad.Provincia>
<label class="control-label">Seleccione el Provincia</label>
<select class="form-control" name="cboProvincia" id="cboProvincia">
    <option value="-1" selected>--Seleccione un Provincia--</option>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <option value="@Html.DisplayFor(modelItem => item.id)">@Html.DisplayFor(modelItem => item.nombre)</option>
        }
    }
    else
    {
        <option value="0">No hay Provincia Disponibles</option>
    }
</select>





