@*-----------Generado :D--------------*@
@model Entidad.Anuncio
@{
    ViewBag.Title = "Detalle Anuncio";
    Layout = "~/Views/Shared/_MasterIntranet.cshtml";
}
<!-- Cabecera -->
<div class="row">
    <div class="col-lg-12">
        <!-- Breadcrumbs -->
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Intranet/Index")">Inicio</a></li>
                <li class="active"><a href="@Url.Content("~/Anuncio/Index")">Anuncios</a></li>
            </ul>
        </div>
        <div class="page-header title">
            <h1>Anuncios <span class="sub-title">Detalle Anuncio</span></h1>
        </div>
        <!-- Breadcrumbs -->
    </div>
</div>
<!-- Cabecera -->
<!-- Aqui empieza el codigo del content -->
<div class="portlet">
    <div class="portlet-heading dark">
        <div class="portlet-title">
            <h4>Detalle de Anuncio</h4>
        </div>
        <div class="portlet-widgets">
            <a data-toggle="collapse" data-parent="#accordion" href="#acordion1"><i class="fa fa-chevron-down"></i></a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div id="acordion1" class="panel-collapse collapse in">
        <div class="portlet-body">
            <div class="display-label">
                @Html.LabelFor(model => model.nombre)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.nombre)
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.imagen)
            </div>
            <div class="editor-field">
                <img src="@Url.Content("~/Exports/")@Html.DisplayFor(model => model.imagen)" width="120" height="100" />
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.descripcion)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.descripcion)
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.fechaHora)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.fechaHora)
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.activo)
            </div>
            <div class="editor-field">
                @if (Model.activo)
                {
                    <label class="label label-active label-lg arrowed arrowed-right">Si</label>
                }
                else
                {
                    <label class="label label-terminated label-lg arrowed arrowed-right">No</label>
                }
            </div>
            <div class="display-label">
                @Html.LabelFor(model => model.Empresa.nombre)
            </div>
            <div class="editor-field">
                @Html.DisplayFor(model => model.Empresa.nombre)
            </div>
            <div class="form-actions">
                @using (Html.BeginForm("Edit", "Anuncio", FormMethod.Post))
                {
                    @Html.HiddenFor(model => model.id)
                    <input type="submit" class="btn btn-primary" value="Editar" />
                    @Html.ActionLink("Regresar a la Lista", "Index")
                }
            </div>
        </div>
    </div>
</div>
