@*-----------Generado :D--------------*@
@model Entidad.Anuncio
@{
    ViewBag.Title = "Crear Anuncio";
    Layout = "~/Views/Shared/_MasterIntranet.cshtml";
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryvalidate")
}
<!-- Cabecera -->
<div class="row">
    <div class="col-lg-12">
        <!-- Breadcrumbs -->
        <div class="breadcrumbs">
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/Intranet/Index")">Inicio</a></li>
                <li class="active"><a href="@Url.Content("~/Anuncio/Index")">Anuncios</a></li>
            </ul>
        </div>
        <div class="page-header title">
            <h1>Anuncios <span class="sub-title">Crear Anuncio</span></h1>
        </div>
        <!-- Breadcrumbs -->
    </div>
</div>
<!-- Cabecera -->
<!-- Aqui empieza el codigo del content -->
<div class="col-md-12">
    <div class="portlet">
        <!-- Cabecera Tabla -->
        <div class="portlet-heading dark">
            <div class="portlet-title">
                <h4>Crear Anuncio</h4>
            </div>
            <div class="portlet-widgets">
                <a data-toggle="collapse" data-parent="#accordion" href="#acordion1"><i class="fa fa-chevron-down"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>
        <!-- Cabecera Tabla -->
        <!-- Cuerpo Tabla -->
        <div id="acordion1" class="panel-collapse collapse in">
            @using (Html.BeginForm("Create", "Anuncio", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="portlet-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre)
                        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", @placeholder = "Ingrese su nombre", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.nombre)
                    </div>                                       
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion)
                        @Html.TextBoxFor(m => m.descripcion, new { @class = "form-control", @placeholder = "Ingrese su descripcion", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.descripcion)
                    </div>                   
                    <div class="form-group">
                        @Html.LabelFor(model => model.activo)
                        @Html.EditorFor(m => m.activo, new { @class = "form-control", @placeholder = "Ingrese su activo", @maxlength = "" })
                        @Html.ValidationMessageFor(model => model.activo)
                    </div>
                    <div class="form-group">
                        <div id="EmpresaLista"></div>
                    </div>
                    <div class="form-group">
                        <label>Seleccione la imagen:</label>
                        <input type="file" required name="file" class="form-control" />
                    </div> 
                    <div class="form-actions">
                        <input type="submit" class="btn btn-primary" value="Guardar" />
                        @Html.ActionLink("Regresar a la Lista de Anuncios", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="clearfix"></div>

<script>
    $(document).ready(function () {
        $.isLoading({ text: "Cargando Formato" });
        $("#EmpresaLista").load('/Intranet/SelectAllEmpresaActivo', function () {
            $.isLoading("hide");
        });
    });
</script>